@model IEnumerable<WebDocTruyen.Models.TrangThai>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Danh sách trạng thái</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Thêm trạng thái mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Trạng thái
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TrangThaiTruyen)
            </td>
            
            <td>
                    <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.TrangThaiId">Sửa</a> |
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.TrangThaiId">Chi tiết</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.TrangThaiId">Xoá</a>
            </td>
        </tr>
}
    </tbody>
</table>
