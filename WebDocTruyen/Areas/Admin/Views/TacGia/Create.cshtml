@model WebDocTruyen.Models.TacGia

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Thêm</h1>

<h4>Tác Giả</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TenTacGia" class="control-label">Tên tác giả</label>
                <input asp-for="TenTacGia" class="form-control" />
                <span asp-validation-for="TenTacGia" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <input type="submit" value="Thêm" class="btn btn-primary" /> | 
                <a class="btn btn-info" asp-action="Index">Trở về danh sách</a>
            </div>
        </form>
    </div>
</div>

