@model WebDocTruyen.Models.TheLoai

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Xoá thể loại</h1>

<h3>Bạn có chắc chắn xoá thể loại này chứ?</h3>
<div>
    <h4>Thể loại</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Tên thể loại
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TenTheLoai)
        </dd>
     
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="TheLoaiId" />
        <input type="submit" value="Xoá" class="btn btn-danger" /> |
        <a class="btn btn-info" asp-action="Index">Trở về danh sách</a>
    </form>
</div>
