@model WebDocTruyen.Models.ChuongTruyen

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Sửa</h1>

<h4>Chương Truyện</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ChuongTruyenId" />
            <div class="form-group">
                <label asp-for="TenChuong" class="control-label">Tên chương</label>
                <input asp-for="TenChuong" class="form-control" />
                <span asp-validation-for="TenChuong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NoiDung" class="control-label">Nội dung</label>
                <input asp-for="NoiDung" class="form-control" />
                <span asp-validation-for="NoiDung" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="DisplayOrder" class="control-label">Thứ tự chương</label>
                <input asp-for="DisplayOrder" class="form-control" />
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="TruyenId" value="@ViewBag.truyenId" />
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" /> | 
                <a class="btn btn-info" asp-action="Index" asp-route-id="@ViewBag.Id">Trở về danh sách chương</a>
            </div>
        </form>
    </div>
</div>


    


