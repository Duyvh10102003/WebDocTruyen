@model WebDocTruyen.Models.ChuongTruyen

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Chi tiết</h1>

<div>
    <h4>Chương Truyện</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Tên Chương
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TenChuong)
        </dd>
        <dt class = "col-sm-2">
            Nội Dung
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NoiDung)
        </dd>
       
        <dt class = "col-sm-2">
            Thứ Tự Hiển Thị
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DisplayOrder)
        </dd>
        <dt class = "col-sm-2">
            Truyện
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Truyen.TenTruyen)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model?.ChuongTruyenId">Sửa</a> |
    <a class="btn btn-info" asp-action="Index" asp-route-id="@ViewBag.Id">Trở về danh sách</a>
</div>
