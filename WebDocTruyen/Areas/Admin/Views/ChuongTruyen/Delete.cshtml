@model WebDocTruyen.Models.ChuongTruyen

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Xoá chương</h1>

<h3>Bạn có chắc chắn xoá chương này không ?</h3>

<div>
    <h4>Chương Truyện</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Tên Chương
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TenChuong)
        </dd>
        <dt class = "col-sm-2">
            Nội Dung
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NoiDung)
        </dd>
     
        <dt class = "col-sm-2">
            Thứ Tự Hiển Thị
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DisplayOrder)
        </dd>
        <dt class = "col-sm-2">
            Truyện
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Truyen.TenTruyen)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ChuongTruyenId" />
        <input type="submit" value="Xoá" class="btn btn-danger" /> |
        <a class="btn btn-info" asp-action="Index" asp-route-id="@ViewBag.Id">Trở về danh sách</a>
    </form>
</div>
