@model WebDocTruyen.Models.Truyen

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Chi tiết</h1>

<div>
    <h4>Truyện</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Tên truyện
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TenTruyen)
        </dd>
        <dt class = "col-sm-2">
            Tóm tắt truyện
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NoiDung)
        </dd>
        <dt class = "col-sm-2">
            Bìa truyện
        </dt>
        <dd class = "col-sm-10">
            <img src="@Html.DisplayFor(model => model.Anh)" width="auto" height="300px" alt="Loi">
        </dd>
        <dt class = "col-sm-2">
            Tác giả
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TacGia.TenTacGia)
        </dd>
        <dt class = "col-sm-2">
            Thể loại
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TheLoai.TenTheLoai)
        </dd>
        <dt class = "col-sm-2">
            Trạng Thái
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TrangThai.TrangThaiTruyen)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model?.TruyenId">Sửa</a> |
    <a class="btn btn-info" asp-action="Index">Trở về danh sách</a>
</div>
