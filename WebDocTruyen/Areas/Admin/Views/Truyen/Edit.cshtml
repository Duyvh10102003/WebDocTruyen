@model WebDocTruyen.Models.Truyen

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Sửa truyện</h1>

<h4>Truyện</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TruyenId" />
            <div class="form-group">
                <label asp-for="TenTruyen" class="control-label">Tên Truyện</label>
                <input asp-for="TenTruyen" class="form-control" />
                <span asp-validation-for="TenTruyen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NoiDung" class="control-label">Tóm tắt Truyện</label>
                <input asp-for="NoiDung" class="form-control" />
                <span asp-validation-for="NoiDung" class="text-danger"></span>
            </div>
            <label asp-for="Anh">Bìa Truyện</label>
            <input type="file" asp-for="Anh" class="form-control" />
            <img src="@Model.Anh" alt="Image" style=" max-width: 200px;" />
            <div class="form-group">
                <label asp-for="TacGiaId" class="control-label">Tác Giả</label>
                <select asp-for="TacGiaId" class="form-control" asp-items="ViewBag.TacGias"></select>
                <span asp-validation-for="TacGiaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TheLoaiId" class="control-label">Thể Loại</label>
                <select asp-for="TheLoaiId" class="form-control" asp-items="ViewBag.TheLoais"></select>
                <span asp-validation-for="TheLoaiId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrangThaiId" class="control-label">Trạng Thái</label>
                <select asp-for="TrangThaiId" class="form-control" asp-items="ViewBag.TrangThais"></select>
                <span asp-validation-for="TrangThaiId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
                <a class="btn btn-info" asp-action="Index">Trở về danh sách</a>
            </div>
        </form>
    </div>
</div>

