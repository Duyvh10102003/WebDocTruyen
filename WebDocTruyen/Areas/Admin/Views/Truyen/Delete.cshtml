@model WebDocTruyen.Models.Truyen

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Xoá truyện</h1>

<h3>Bạn có chắc chắn muốn xoá truyện này không?</h3>
<div>
    <h4>Truyện</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Tên Truyện
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TenTruyen)
        </dd>
        <dt class = "col-sm-2">
            Tóm tắt truyện
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NoiDung)
        </dd>
        <dt class = "col-sm-2">
            Bìa truyện
        </dt>
        <dd class = "col-sm-10">
            <img src="@Html.DisplayFor(model => model.Anh)" width="auto" height="300px" alt="Loi">
        </dd>
        <dt class = "col-sm-2">
            Tác giả
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TacGia.TenTacGia)
        </dd>
        <dt class = "col-sm-2">
            Thể loại
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TheLoai.TenTheLoai)
        </dd>
        <dt class = "col-sm-2">
            Trạng thái
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TrangThai.TrangThaiTruyen)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="TruyenId" />
        <input type="submit" value="Xoá" class="btn btn-danger" /> |
        <a class="btn btn-info" asp-action="Index">Trở về danh sách</a>
    </form>
</div>
